{
  "journal.base": "${workspaceFolder}/journal",
  "journal.dev": true,
  "journal.locale": "en-US",
  "journal.openInNewEditorGroup": false,
  "journal.patterns": {
    "notes": {
      "path": "${base}/${year}/${month}/${day}",
      "file": "${input}.${ext}"
    },
    "entries": {
      "path": "${base}/${year}-${month}",
      "file": "${year}${month}${day}.${ext}"
    }
  },
  "journal.templates": [
    {
      "name": "memo", 
      "template": "- ${d:HHmm}: ${input}", 
      "after": "## Notes"
    }, 
    {
      "name": "task", 
      "template": "- [] Task: ${input}", 
      "after": "## Tasks"
    }, 
    {
      "name": "entry", 
      "template": "# ${d:dddd, MMMM DD YYYY}\n\n## Tasks\n\n## Notes\n\n"
    }, 
    {
      "name": "time", 
      "template": "${localTime}"
    },     
  ]
  , 

  "journal.scopes": [
     {
      "name": "private", 
      "base": "${workspaceFolder}/scopes/private", 
      "patterns": {
        "notes": {
          "path": "${base}",
          "file": "${d: YYYYY-DD-MM}-${input}.${ext}"
        }
      }
    }, 
    {
      "name": "proj1", 
      "base": "${workspaceFolder}/scopes/MyProject-1", 
      "patterns": {
        "notes": {
          "path": "${base}/.notes",
          "file": "${d: YYYYY-DD-MM}-${input}.${ext}"
        }
      }
    }
  ]
}